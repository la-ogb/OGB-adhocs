.#######################################################################
RUN_NOW ROUTINE
+ Configure runtime settings

.Save stack size at program start
    RETCOUNT ORIG_RETURN

.Set applicable traps
    TRAPSAVE TRAP_DATA
    TRAPCLR ALL
    TRAP QUIT NORESET IF F9

.Get run date
    CLOCK TIMESTAMP INTO CURRDATE

    MOVE "A2303011" TO C_PROG        ...Program name
    MOVE "FIX CLIP FIX MEM" TO C_OPER  ...Program description
    MOVE "MENU" TO C_NEXT
    MOVE "RUN_NOW" TO C_LABEL
    MOVE BLANKS TO C_FILE
    MOVE BLANKS TO C_KEYS

.Check if the program was called from the command line
    IF (C_CMDPAR)
        CALL CMD_START USING C_PROG
    ELSE
        CALL X_BLANK_SCREEN
    ENDIF

.Configure test options based on file mode. Default is Production
    CALL UTIL_SET_TESTMODE USING PARAM_TEST:  ...scheduler param
                                 ENABLE_TEST:  ...test toggle
                                 TEST_CONFIG  ...test settings list

.Set up run mode or build SCH record
    CALL SCHED_PICK

    SWITCH RUN_MODE
        CASE "N" | "B"
            CALL MAIN_PROCESS
        DEFAULT
    ENDSWITCH

    CALL NORMAL_EOJ

    RETURN
    ENDROUTINE


.#######################################################################
MAIN_PROCESS LROUTINE
+ Core logic
CLIR        CHAR    8
ID          CHAR    8
ID2         CHAR    4
    debug
    PACK CLIR WITH "00008387"
    CALL UTIL_MEME_FIND_2 USING CLIR
    IF NOT EQUAL
        debug
    ENDIF

    PACK ID WITH "01013599"
    CALL UTIL_MEME_FIND_2 USING CLIR,ID
    IF NOT EQUAL
        debug
    ENDIF

    PACK ID2 WITH "0007"
    CALL UTIL_MEME_FIND_2 USING CLIR,ID,ID2
    IF NOT EQUAL
        debug
    ENDIF

.Works with no clir? I expect no
    FILL " " IN CLIR
    CALL UTIL_MEME_FIND_2 USING CLIR,ID,ID2
    IF NOT EQUAL
        debug
    ENDIF


    CALL INITIALIZE
    CALL FIND_CLIPS
    CALL FIND_MATCHES
.Find CLIP records fixed by FX0026
.For each CLIP, find any MEME records that may match up with the
.   CLIR
.   NET,PRD,PLAN
.   RT

    CALL CLEAN_UP

    RETURN
    ENDROUTINE


